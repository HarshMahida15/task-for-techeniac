Solution 1 -


// Online C compiler to run C program online

#include <stdio.h>

int main() 
{
    int a[5]={5,6,3,2,1};
    int key;
    int n;
    int i;
 
    printf("Enter the element to be searched in the array:");
    scanf("%d",&key);
    
    for(i=0 ;i<5;i++)
    {
        
        if(key==a[i])
        {
            
            printf("the element exist in the a[%d] pos \n",i);
            
        }
        
        else
        {
            printf("the element does not exist at a[%d] pos \n",i);
        }
    }
    return 0;
}


