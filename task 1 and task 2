Solution 2 -

// Online C compiler to run C program online
#include <stdio.h>

int main() {
    
  int n,sum=0,rem;
  
  
  printf("enter the number for palindrome check:");
  scanf("%d",&n);
  
  int temp =n;
  
  while(n>0)
  {
    rem = n%10;
    sum=(sum*10)+rem;
    n=n/10;
  }
 
  if(temp==sum)
  {
      printf("the number is palindrome");
  }
  else
  {
      printf("the number is not palindrome");
  }
   
    return 0;
}
